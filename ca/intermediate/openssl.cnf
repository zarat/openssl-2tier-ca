[req]
default_bits = 2048
prompt = no
default_md = sha256
distinguished_name = dn
req_extensions = v3_ca

[dn]
C = AT
ST = Vienna
L = Vienna
O = AKM
OU = Intermediate CA
CN = AKM EnterpriseIssuing CA

[v3_ca]
basicConstraints = critical, CA:TRUE, pathlen:0
keyUsage = critical, keyCertSign, cRLSign
subjectKeyIdentifier = hash
